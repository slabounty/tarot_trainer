<div class="bg-white p-8 rounded-xl shadow-lg flex flex-col items-center">

  <h2 class="text-2xl font-bold text-gray-800 mb-6">
    Reading: <%= @spread.name %>
  </h2>

  <!-- Cards in a row -->
  <div class="flex gap-6 mb-4">
    <% @cards.each do |card| %>
      <div class="flex flex-col items-center">
        <%= image_tag "tarot/#{card.image_file}", class: "w-64 h-auto rounded shadow" %>
      </div>
    <% end %>
  </div>

  <!-- Position names in a row under cards -->
  <div class="flex gap-6">
    <% @positions.each do |p| %>
      <div class="w-64 text-center text-gray-700 text-xl">
        <%= p.name %>
      </div>
    <% end %>
  </div>

  <!-- Prompt for the spread -->
  <p class="text-lg italic text-gray-700 mb-4"><%= @prompt %></p>

  <!-- User Input Form -->
  <%= form_with model: @reading, url: update_reading_path(@reading), method: :patch, local: true, class: "w-full max-w-xl" do |f| %>

    <div class="mb-4">
      <%= f.label :user_input, "Your Interpretation", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_area :user_input,
            rows: 5,
            class: "w-full border border-gray-300 rounded-lg p-3" %>
    </div>

    <%= f.submit "Save Interpretation",
          class: "bg-blue-600 hover:bg-blue-700 text-white font-medium px-6 py-2 rounded-lg cursor-pointer" %>
  <% end %>

</div>

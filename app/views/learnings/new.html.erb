<div class="bg-white p-8 rounded-xl shadow-lg max-w-xl mx-auto">
  <h1 class="text-2xl font-bold mb-6">Learning Mode</h1>

  <%= form_with url: learning_path, method: :get, local: true do %>
    <fieldset class="space-y-3 mb-6">
      <legend class="font-semibold mb-2">Choose cards</legend>

      <% [
        ["All Cards", "all_cards"],
        ["Major Arcana", "major"],
        ["Cups", "cups"],
        ["Wands", "wands"],
        ["Swords", "swords"],
        ["Pentacles", "pentacles"]
      ].each do |label, value| %>
        <label class="flex items-center space-x-2">
          <%= radio_button_tag :mode, value, value == "all_cards" %>
          <span><%= label %></span>
        </label>
      <% end %>
    </fieldset>

    <%= submit_tag "Start Learning",
        class: "bg-purple-600 text-white px-6 py-3 rounded-lg" %>
  <% end %>
</div>

<div class="bg-white p-8 rounded-xl shadow-lg flex flex-col items-center space-y-6">
  <h1 class="text-2xl font-bold mb-4">Tarot Quiz</h1>

  <p class="mb-6 text-gray-700 text-center">
    Test your tarot knowledge by matching cards to their meanings.
  </p>

  <%= form_with url: quizzes_path, method: :post, local: true do %>
    <div class="mb-6 space-y-3">
      <p class="font-semibold text-gray-800 text-center">
        Choose a quiz type
      </p>

      <div class="grid grid-cols-2 gap-3">
        <% [
          ["All", "all"],
          ["Major Arcana", "major_arcana"],
          ["Cups", "cups"],
          ["Wands", "wands"],
          ["Swords", "swords"],
          ["Pentacles", "pentacles"]
        ].each do |label, value| %>
          <label class="flex items-center gap-2 cursor-pointer">
            <%= radio_button_tag(
                  :quiz_type,
                  value,
                  value == "all"
                ) %>
            <span class="text-gray-700"><%= label %></span>
          </label>
        <% end %>
      </div>
    </div>

    <div class="text-center">
      <%= submit_tag "Start Quiz",
            class: "bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-700" %>
    </div>
  <% end %>
</div>

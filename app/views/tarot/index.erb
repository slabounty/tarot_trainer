<div class="flex flex-col gap-6">

  <!-- Heading on top -->
  <h1 class="text-5xl font-bold text-blue-600">Your Tarot Card</h1>

  <!-- Card and meaning side-by-side -->
  <div data-controller="card" class="flex gap-6">

    <!-- Left: tarot card -->
    <div>
      <%= image_tag "tarot/#{@card}",
            class: "w-64 cursor-pointer",
            data: { action: "click->card#showInfo" } %>
    </div>

    <!-- Right: hidden text that appears after tapping -->
    <div data-card-target="info" class="hidden max-w-md flex flex-col space-y-20">

      <div>
        <h2 class="text-xl font-bold mb-1">Name</h2>
        <p class="text-gray-700"><%= @card_info["name"] %></p>
      </div>

      <div>
        <h2 class="text-xl font-bold mb-1">Meaning</h2>
        <p class="text-gray-700"><%= @card_info["meaning"] %></p>
      </div>

      <div>
        <h2 class="text-xl font-bold mb-1">Arcana</h2>
        <p class="text-gray-700"><%= @card_info["arcana"] %></p>
      </div>

      <div>
        <h2 class="text-xl font-bold mb-1">Element</h2>
        <p class="text-gray-700"><%= @card_info["element"] %></p>
      </div>
    </div>
  </div>
</div>

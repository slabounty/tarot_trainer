<div class="bg-white p-8 rounded-xl shadow-lg flex flex-col items-center">

  <h2 class="text-2xl font-bold text-gray-800 mb-6">
    Reading: <%= @spread.name %>
  </h2>

  <!-- Cards in a row -->
  <div class="flex gap-6 mb-4">
    <% @cards.each do |card| %>
      <div class="flex flex-col items-center">
        <%= image_tag "tarot/#{card.image_file}", class: "w-64 h-auto rounded shadow" %>
      </div>
    <% end %>
  </div>

  <!-- Position names in a row under cards -->
  <div class="flex gap-6">
    <% @positions.each do |p| %>
      <div class="w-64 text-center text-gray-700 text-xl">
        <%= p.name %>
      </div>
    <% end %>
  </div>

  <p class="text-lg italic text-gray-700 mb-4"><%= @prompt %></p>
</div>


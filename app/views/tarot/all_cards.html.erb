<div class="max-w-5xl mx-auto p-6">
  <h1 class="text-4xl font-bold mb-8 text-center">Complete Tarot Deck</h1>

  <% @cards.each do |suit, cards| %>
    <h2 class="text-2xl font-semibold mt-10 mb-4 border-b pb-2"><%= suit %></h2>

    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
      <% cards.each do |card| %>
        <div class="flex flex-col items-center">
          <%= image_tag "tarot/#{card.image_file}", class: "w-28 h-auto rounded shadow" %>
          <div class="mt-2 text-center text-sm font-medium"><%= card.name %></div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

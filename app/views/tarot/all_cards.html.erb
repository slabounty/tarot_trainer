<div class="bg-white p-8 rounded-xl shadow-lg flex flex-col items-center">
  <div data-controller="card-modal">

    <% @cards.each do |suit, cards| %>
      <section class="mb-10">
        <div class="max-w-5xl mx-auto px-2">
          <h2 class="text-3xl font-bold mb-4 text-gray-800"><%= suit %></h2>

          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
            <% cards.each do |card| %>
              <div
                class="cursor-pointer text-center hover:scale-105 transition"
                data-action="click->card-modal#open"
                data-name="<%= card.name %>"
                data-suit="<%= card.suit %>"
                data-value="<%= card.value %>"
                data-meaning="<%= card.meaning %>"
              >
                <%= image_tag "tarot/#{card.image_file}",
                      class: "w-24 sm:w-28 md:w-32 mx-auto rounded shadow" %>

                <p class="mt-2 text-sm text-gray-700"><%= card.name %></p>
              </div>
            <% end %>
          </div>
        </div>
      </section>
    <% end %>

    <!-- MODAL -->
    <div
      data-card-modal-target="modal"
      class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50"
    >
      <div class="bg-white rounded-xl p-6 max-w-md w-full shadow-xl relative">
        <button
          class="absolute top-3 right-3 text-gray-500 hover:text-black"
          data-action="click->card-modal#close"
        >
          âœ•
        </button>

        <h3
          data-card-modal-target="title"
          class="text-2xl font-bold mb-4"
        ></h3>

        <div
          data-card-modal-target="content"
          class="space-y-2"
        ></div>
      </div>
    </div>

  </div>
</div>
